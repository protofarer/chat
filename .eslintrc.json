{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": [
            "error",
            "single",
            { "allowTemplateLiterals": true }
        ],
        "no-console": "off",
        "semi": "warn"
    },
    "ignorePatterns": [
        "archive",
        "build",
        "public/build",
        "node_modules",
        ".eslintrc.json",
        "vite.config.ts",
        "cypress",
        "test",
        "mocks",
        "cypress.config.ts"
  ]
}
